@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "商品信息";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>商品信息</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">   
        <div class="am-u-lg-12 am-u-end">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称：</span>
                <input type="text" class="am-form-field" placeholder="按商品名称搜索" style="width:100px;" name="name" ;>
                <span class="am-input-group-label am-margin-left-sm">分类名称：</span>
                <input type="text" class="am-form-field" placeholder="按分类名称搜索" style="width:100px;" name="categoryName" ;>
                <span class="am-input-group-label am-margin-left-sm">状态：</span>
                <select name="isOnSale" data-am-selected="{btnSize: 'sm'}">
                    <option value="0">请选择</option>
                    <option value="True">上架</option>
                    <option value="False">下架</option>
                </select>
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>


    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-6">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-xs">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-compact am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="ID" type="checkbox"></th>
                <th dataname="Name">商品名称</th>
                <th render="ShowPic">图片</th>
                <th dataname="CategoryName">分类名称</th>
                <th dataname="Price">原价</th>
                <th dataname="SaleStr">状态</th>             
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript"> 

        function ClearFilter() {
            $("#searchDomain input").val("");
        }


        //批量删除
        function batchDelete() {
            $.Nuoya.confirm("确认删除？", function () {
                grid.del({
                    ajaxUrl: "/Admin/Goods/Delete",
                    callback: function (json) {
                        grid.reload();
                    }
                });
            });
        }

        function formInit(dataitem) {
            $.Nuoya.action("/Admin/GoodsCategory/GetSelectItem", {}, function (json) {
                $(json).each(function () {
                    if (dataitem != null && dataitem.CategoryID == this.Value) {
                        $("#form select[name='CategoryID']").append("<option  value='" + this.Value + "' selected='selected' >" + this.Text + "</option>");
                    }
                    else {
                        $("#form select[name='CategoryID']").append("<option  value='" + this.Value + "' >" + this.Text + "</option>");
                    }
                });
            });
            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 64
                    },
                    IsOnSale: {
                        required: true,
                    },
                    CategoryID: {
                        required: true,
                        maxlength: 256
                    },
                    Picture: {
                        required: true,
                        maxlength: 256
                    },
                    Price: {
                        min: 0,
                        max:100000
                    },
                },
                messages: {
                    Name: {
                        required: "名称不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    IsOnSale: {
                        required: "商品类型不允许为空",
                    },
                    CategoryID: {
                        required: "商品分类不能为空",
                        maxlength: "最多{0}个字符"
                    },
                    Picture: {
                        required: "图片不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Price: {
                        max: "必须小于{0}",
                        min: "必须大于{0}"
                    },
                }
            });

            if (dataitem != null) {
                if (dataitem.Picture != null) {
                    if (dataitem.Picture != null) {
                        $("#imageDiv").show().find("img").attr("src", dataitem.Picture);
                    }

                }
                //debugger
                if (!dataitem.IsOnSale) {
                    $("[name='IsOnSale'] option").eq(1).attr("selected", true);
                }
                else {
                    $("[name='IsOnSale'] option").eq(0).attr("selected", true);
                }
            }

            UploadImg();       
        }


        function UploadImg() {
            var headimgbtn = $("#imageFile").uploadFile({
                url: '/admin/upload/uploadimage?mark=Goods',
                fileSuffixs: ["jpg", "png", "gif"],
                maximumFilesUpload: 1,//最大文件上传数
                onComplete: function (data) {
                    if (data) {
                        $("[name='Picture']").val(data);
                        $("#imageDiv").show().find("img").attr("src", data);
                    }
                    else {
                        $.Nuoya.alert("上传错误");
                    }

                },
                onChosen: function (file, obj, fileSize, errorText) {
                    if (errorText) {
                        $.Nuoya.alert(errorText);
                        return false;
                    }
                    //Loading("图片正在上传中...", "请稍等");
                    uploadheadimg.submitUpload();
                    return true;//返回false将取消当前选择的文件
                },
            });
            var uploadheadimg = headimgbtn.data("uploadFileData");
        }


        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                ajaxUrl: "/Areas/Admin/HtmlTemplates/Goods/Update.html",
                title: "添加商品",
                width: ($(window).width() - 600) + "px",
                height: ($(window).height() - 100) + "px",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {
                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Admin/Goods/Add",

                            callback: function (data) {
                                if (!data.ErrorDesc) {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.ErrorDesc);
                            }
                        });   
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Admin/Goods/GetPageList",
            //数据请求地址
            
            events: [
                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            ajaxUrl: "/Areas/Admin/HtmlTemplates/Goods/Update.html",
                            title: "编辑商品",
                            width: ($(window).width() - 600) + "px",
                            height: ($(window).height() - 100) + "px",
                            callback: function (e) {
                                $.Nuoya.action("/Admin/Goods/Find", { id: item.ID }, function (model) {
                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                    formInit(model);//表单初始化
                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {

                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/Admin/Goods/Update",
                                        params: {
                                            ID: item.ID
                                        },
                                        callback: function (data) {
                                            if (!data.ErrorDesc) {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.ErrorDesc);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                }, 
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.confirm("确认删除？", function () {
                            $.Nuoya.deleteAction("/Admin/Goods/Delete", {
                                ids: item.ID
                            },
                            function () {
                                grid.reload();
                            });
                        });
                    }
                }
            ]
        });

    </script>
}
