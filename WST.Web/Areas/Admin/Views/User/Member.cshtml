@using WST.Core.Helper;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "会员管理";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>会员管理</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">   
        <div class="am-u-lg-8 am-u-end">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">会员名称：</span>
                <input type="text" class="am-form-field" placeholder="按会员名称搜索" style="width:100px;" name="name" ;>
                <span class="am-input-group-label  am-margin-left-sm">手机号：</span>
                <input type="text" class="am-form-field" placeholder="按手机号搜索" style="width:100px;" name="phone" ;>
                <span class="am-input-group-label  am-margin-left-sm">创建日期</span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeStart" readonly style="width:120px;">
                <span class="am-input-group-label"> - </span>
                <input type="text" class="am-form-field" placeholder="请选择日期" name="createdTimeEnd" readonly style="width:120px;">
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>


    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-6">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-xs">
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-compact am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="ID" type="checkbox"></th>
                <th dataname="NickName">会员名称</th>
                <th dataname="Mobile">手机号</th>
                <th dataname="StoreName">门店名</th>
                <th dataname="AdviserName">顾问</th>
                <th dataname="Balance">余额</th>
                <th dataname="EndTime" datatype="jsondate">到期日期</th>
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript">

        $('[name=createdTimeStart]').datepicker({ format: 'yyyy-mm-dd' });
        $('[name=createdTimeEnd]').datepicker({ format: 'yyyy-mm-dd' });
        function ClearFilter() {
            $("#searchDomain input").val("");
        }
        //批量删除
        function batchDelete() {
            $.Nuoya.confirm("确认删除？", function () {
                grid.del({
                    ajaxUrl: "/Admin/User/Delete",
                    callback: function (json) {
                        grid.reload();
                    }
                });
            });
        }



        function formInit(dataitem) {

            if (dataitem != null) {

                if (dataitem.HeadImgUrl != null) {
                    $("#form #imageDiv").show().find("img").attr("src", dataitem.HeadImgUrl);
                }
            }

            $.Nuoya.action("/Admin/Adviser/GetSelectItem", {}, function (json) {
                $(json).each(function () {
                    $("#form select[name='AdviserID']").append("<option " + (dataitem != null && dataitem.AdviserID == this.Value ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });

            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    NickName: {
                        required: true,
                        maxlength: 32
                    },
                    IDCard: {
                        required: true,
                    },
                    Sex: {
                        required: true
                    },
                    Mobile: {
                        required: true,
                        maxlength: 11
                    },
                    AdviserID: {
                        required: true
                    },
                    StoreName: {
                        required: true,
                        maxlength: 32
                    },
                    StartTime: {
                        required: true,
                    },
                    EndTime: {
                        required: true,
                    },
                },
                messages: {
                    NickName: {
                        required: "名称不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    IDCard: {
                        required: "身份证不允许为空",
                    },
                    Sex: {
                        required: "请选择性别"
                    },
                    Mobile: {
                        required: "手机号不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    AdviserID: {
                        required: "顾问不允许为空",
                    },
                    StoreName: {
                        required: "来源不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    StartTime: {
                        required: "不允许为空",
                    },
                    EndTime: {
                        required: "不允许为空",
                    },
                }
            });
            UploadImg();
        }


        function UploadImg() {
            var headimgbtn = $("#imageFile").uploadFile({
                url: '/admin/upload/uploadimage?mark=user',
                fileSuffixs: ["jpg", "png", 'jpeg'],
                maximumFilesUpload: 1,//最大文件上传数       ]
                isGetFileSize: true,
                maxFileSize: 200 * 1024 * 1024,
                onComplete: function (data) {
                    if (data) {
                        $("[name='HeadImgUrl']").val(data);
                        $("#imageDiv").show().find("img").attr("src", data);
                    }
                    else {
                        $.Nuoya.alert("上传错误");
                    }

                },
                onChosen: function (file, obj, fileSize, errorText) {
                    if (errorText) {
                        $.Nuoya.alert(errorText);
                        return false;
                    }
                    //Loading("图片正在上传中...", "请稍等");
                    uploadheadimg.submitUpload();
                    return true;//返回false将取消当前选择的文件
                },
            });
            var uploadheadimg = headimgbtn.data("uploadFileData");
        }
        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Admin/User/GetPageList",
            //数据请求地址
            params: {
                isMember:true
            },
            events: [
               {
                   className: "am-text-secondary",
                   icon: "icon-pencil-square-o",
                   name: "编辑",
                   click: function (item) {
                       $.Nuoya.ajaxDialog({
                           closeViaDimmer: false,
                           ajaxUrl: "/Areas/Admin/HtmlTemplates/User/Update.html",
                           title: "编辑会员",
                           width: ($(window).width() - 100) + "px",
                           height: ($(window).height() - 100) + "px",
                           callback: function (e) {
                               $.Nuoya.action("/Admin/User/Find", { id: item.ID }, function (model) {
                                   //载入数据
                                   $.Nuoya.form("form").dataLoad({
                                       data: model
                                   });
                                   formInit(model);//表单初始化
                               });
                           },
                           buttons: [{
                               label: "保存",
                               callback: function (e) {

                                   if (!document.forms[0].AdviserID.value == "-1") {
                                       $.Nuoya.alert("请选择会籍顾问");
                                       return false;
                                   }
                                   if (!isCardID($("#form [name='IDCard']"))) {
                                       return false;
                                   }

                                   $.Nuoya.form("form").ajaxSubmit({
                                       ajaxUrl: "/Admin/User/UpdateMember",
                                       params: {
                                           ID: item.ID
                                       },
                                       callback: function (data) {
                                           if (!data.ErrorDesc) {
                                               e.hide();
                                               grid.reload();
                                           }
                                           else
                                               $.Nuoya.alert(data.ErrorDesc);
                                       }
                                   });
                               }
                           }]
                       })
                   }
               },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.confirm("确认删除？", function () {
                            $.Nuoya.deleteAction("/Admin/User/Delete", {
                                ids: item.ID
                            },
                            function () {
                                grid.reload();
                            });
                        });
                    }
                }
            ]
        });

    </script>
}
