                        $('.apply-info-wrapper .msg').text($('.apply-info-wrapper input').eq(i).attr('data-rules'));
                        if (timer) clearTimeout(timer);
                        timer = setTimeout(function () {
                            $('.apply-info-wrapper .msg').text('');
                        }, 5000)
                        return false;
                    }
                }
                $('.apply-info-wrapper .msg').text('');
                console.log('pass');

                $.ajax({
                    url: '/user/tomiaosha',
                    method:'post',
                    data: {
                        id: '@(Model.ID)',
                        mobile: $('#userPhone').val(),
                        name: $('#userName').val(),
                        filedJson: ''
                    },
                    success: function (data) {
                        if (data.Code == 0) {
                            alert("秒杀成功");
                            location.href = location.href+'&datetime='+new Date().getTime();
                            window.location = location;
                        }
                        else
                            alert(data.ErrorDesc);

                    }
                })
            })
            @{
                DateTime origin = new DateTime(1970, 1, 1, 0, 0, 0, 0);

                TimeSpan endDiff = Model.StartTime - origin;
                var endimeStamp = Math.Floor(endDiff.TotalSeconds);

            }
            //倒计时
            var startTimeStamp = new Date(@(Model.StartTime.AddMonths(-1).ToString("yyyy,MM,dd,HH,mm,ss"))).getTime();
            var endTimeStamp = new Date(@(Model.EndTime.AddMonths(-1).ToString("yyyy,MM,dd,HH,mm,ss"))).getTime();
	    console.log(endTimeStamp);
            cutDown(startTimeStamp, endTimeStamp);

            function cutDown(target, over) {
		var t,start,timer1;
                timer1 = setInterval(function() {
		    start = new Date().getTime();
		    t = parseInt(target) - parseInt(start);
		    if(start >= over) {
			console.log(over);
			t = 0;
			$('#countDown span').text('秒杀结束');
			clearInterval(timer1);
			return false;
		    }
                    if(t <= 0) {
			t = 0;
			$('#countDown span').text('秒杀开始');
		    } else {

			    var d = parseInt(t / 1000 / 60 / 60 / 24 , 10); //计算剩余的天数
			    var h = parseInt(t / 1000 / 60 / 60 % 24 , 10); //计算剩余的小时
			    var m = parseInt(t / 1000 / 60 % 60, 10);//计算剩余的分钟
			    var s = parseInt(t / 1000 % 60, 10);//计算剩余的秒数
			    d = d < 10 ? '0'+d : d;
			    h = h < 10 ? '0'+h : h;
			    m = m < 10 ? '0'+m : m;
			    s = s < 10 ? '0'+s : s;
			    var str = d+' 天 '+h+' 小时 '+m+' 分钟 '+s+' 秒';
			    console.log(str);
			    $('#countDown span').text(str);
			}
                }, 1000)
            }

        })
