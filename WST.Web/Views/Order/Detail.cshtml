@using WST.Core.Extensions
@using WST.Domain
@model PayOrder
@{
    ViewBag.Title = "订单详情";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>订单详情</title>
    <meta name="viewport" content="width=device-width,user-scalable=no">
    <meta name="format-detection" content="telephone=no" />
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache, must-revalidate">
    <meta http-equiv="expires" content="0">
    <link rel="stylesheet" href="~/assets/css/reset.css">
    <script src="~/assets/js/jquery-2.1.4.min.js"></script>
    <script src="~/assets/js/my.js"></script>
    <style>
        .nav-wrapper {
            overflow: hidden;
            position: fixed;
            top: 0;
            left: 0;
            padding: 0.4em 1em;
            width: 100%;
            height: 2.8em;
            text-align: center;
            line-height: 2em;
            border-bottom: 1px dashed #eee;
            background: #fff;
            color: #56B6C4;
        }

            .nav-wrapper a {
                position: absolute;
                left: 0;
                top: 0;
                line-height: 2.8em;
                padding: 0 1em;
                color: #56B6C4;
            }

        .foot-wrapper {
            padding-bottom: 2em;
            margin-top: 2.5em;
            overflow: hidden;
        }

            .foot-wrapper .button {
                background: #608DA4;
                width: 79%;
                color: #fff;
                text-align: center;
                font-weight: bold;
                line-height: 2.5em;
                height: 2.5em;
                padding: 0;
                border-radius: 0.5em;
            }

            .foot-wrapper .button {
                float: none;
                margin: 0 auto;
                width: 90%;
                text-align: center;
                color: #fff;
                padding: 0;
                margin-top: 1em;
                background: #56B6C4;
                box-shadow: 0 2px 3px 0 #2b6a73;
                border-radius: 1em;
            }

        .body-wrapper {
            padding: 2.8em 1em 0;
        }

            .body-wrapper p {
                padding-left: 0.5em;
            }

            .body-wrapper ul li {
                border-bottom: 1px dashed #ccc;
                line-height: 2.6em;
                padding: 0 0.5em;
            }
    </style>
</head>
<body>
    <div class="l">
        <div class="nav-wrapper">
            <a href="/user/index" class="backhome fl"><返回</a>
            订单详情
        </div>

        <div class="body-wrapper">
            <div class="c-999 txt-center f12 mt20">支付金额</div>
            <div class="c-000 txt-center f20 mt10">￥@(Model.Amount)</div>
            <p class="c-333 f11 mt10">@(Model.Remark)</p>
            <ul class="mt10">
                <li><span class="c-999">订单编号：</span><span>@(Model.NO)</span></li>
                <li><span class="c-999">下单人：</span><span>@(LoginHelper.GetCurrentUser().Account)</span></li>
                <li><span class="c-999">手机号：</span><span>@(Model.NO)</span></li>
                <li><span class="c-999">下单日期：</span><span>@(Model.CreatedTime.ToString("yyyy-MM-dd HH:mm"))</span></li>
            </ul>
        </div>

    </div>
</body>
</html>
@section scripts
{
    
}